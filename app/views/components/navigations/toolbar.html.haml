= title 'Toolbar', url: "components/button-group/#button-toolbar"
%blockquote UiBibz::Ui::Core::Navigations::Toolbar
%p.bd-callout Group a series of button group together on a single line with the button toolbar.

= code do
  :plain
    ui_toolbar options, html_options do |bt|
      bt.button_group options, html_options do |bg|
        # by variable
        bg.button content, options, html_options
        # or by block
        bg.button options, html_options do
          content
        end

        n.form url, options, html_options do
          content
        end

      end
    end

= component_options do |co|
  - co.inherit_options_links except: %i(glyph popover state size tooltip)

= component_items do |ci|
  - ci.inherit_component 'button_group', components_forms_buttons_button_group_path
  - ci.list 'spacer'
  - ci.html_link
  - ci.list 'form' do |cli|
    - cli.list 'type', types: 'symbol', values: %w(:form_for :ui_form_for :form_tag), default: ":form_tag"

- @sections = sections do |s|
  - s.section title: "Spacer" do
    Allow to add spaces between items.
    %br
    = spacer_values
    = example do |c|
      - c.header do
        = ui_toolbar do |bt|
          - bt.button_group do |bg|
            - bg.button 1
            - bg.button 2
            - bg.button 3
          - bt.spacer 2
          - bt.button_group do |bg|
            - bg.button 4
            - bg.button 5
            - bg.button 6
          - bt.spacer 4
          - bt.button_group do |bg|
            - bg.button 8
            - bg.button 9
          - bt.spacer
          - bt.button_group do |bg|
            - bg.button 10
            - bg.button 11
      - c.code do
        :plain
          ui_toolbar do |t|
            t.button_group do |bg|
              bg.button 1
              bg.button 2
              bg.button 3
            end
            t.spacer 2
            t.button_group do |bg|
              bg.button_link 4, url: "#4"
              bg.button_link 5, url: "#5"
              bg.button_link 6, url: "#6"
            end
            t.spacer 4
            t.button_group do |bg|
              bg.button 8
              bg.button 9
            end
            t.spacer
            t.button_group do |bg|
              bg.button 10
              bg.button 11
            end
          end
      - c.html do
        :plain
          <div class="btn-toolbar" role="toolbar">
            <div class="btn-group me-2" role="group">
              <button class="btn">1</button>
              <button class="btn">2</button>
              <button class="btn">3</button>
            </div>
            <div class="btn-group me-4" role="group">
              <a href="#4" class="btn">4</a>
              <a href="#5" class="btn">5</a>
              <a href="#6" class="btn">6</a>
            </div>
            <div class="btn-group me-auto" role="group">
              <button class="btn">8</button>
              <button class="btn">9</button>
            </div>
            <div class="btn-group" role="group">
              <button class="btn">10</button>
              <button class="btn">11</button>
            </div>
          </div>

  - s.section title: "Justify" do
    = example do |c|
      - c.header do
        = ui_toolbar justify: true do |bt|
          - bt.button_group status: :success  do |bg|
            - bg.button 'Copy', text: false, glyph: 'copy'
            - bg.button 'Paste', text: false, glyph: 'paste', status: :danger
            - bg.button 'Cut', text: false, glyph: 'cut'
          - bt.form "form", url: '#', type: :form_tag do
            = ui_text_field "text"
          - bt.button_group  do |bg|
            - bg.button 6
            - bg.button 7
            - bg.dropdown 'Dropdown' do |d|
              - d.link 'link', url: '#link'
      - c.code do
        :plain
          ui_toolbar justify: true do |t|
            t.button_group status: :success do |bg|
              bg.button "Copy", text: false, glyph: "copy"
              bg.button "Paste", text: false, glyph: "paste", status: :danger
              bg.button "Cut", text: false, glyph: "cut"
            end
            t.form "form", url: '#', type: :form_tag do
              ui_text_field "text"
            end
            t.button_group do |bg|
              bg.button 4
              bg.button 5
              bg.dropdown "Dropdown", do |d| 6
                d.link "Link", url: "#link"
              end
            end
          end
      - c.html do
        :plain
          <div class="btn-toolbar justify-content-between" role="toolbar">
            <div class="btn-group" role="group">
              <button class="btn-success btn without-text" title="" data-original-title="Copy"><i class="glyph fa fa-copy"></i> &nbsp;</button>
              <button class="btn-danger btn without-text" title="" data-original-title="Paste"><i class="glyph fa fa-paste"></i> &nbsp;</button>
              <button class="btn-success btn without-text" title="" data-original-title="Cut"><i class="glyph fa fa-cut"></i> &nbsp;</button>
            </div>
            <form url="#" type="form_tag" class="btn-group" action="form" accept-charset="UTF-8" method="post">
              <input type="text" name="text" id="text" class="form-control">
            </form>
            <div class="btn-group" role="group">
              <button class="btn">6</button>
              <button class="btn">7</button>
              <div class="dropdown btn-group">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="dropdown-124592266235445737550728140034240625579">Dropdown <span class="caret"></span></button>
                <div class="dropdown-menu" arial-labelledby="dropdown-124592266235445737550728140034240625579">
                  <a class="dropdown-item" href="#link">link</a>
                </div>
              </div>
            </div>
          </div>

= @sections.render
